<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:UncannyRPC"
             x:Class="UncannyRPC.App">
    
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon ToolTipText="Uncanny RPC" Clicked="TrayIcon_OnClicked">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Icon="Assets/button.png" Header="Exit" Click="NativeMenuItem_OnClick"></NativeMenuItem>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <StyleInclude Source="avares://AvaloniaEdit/AvaloniaEdit.xaml" />
    </Application.Styles>
</Application>
